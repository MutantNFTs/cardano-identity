{
  "name": "@mutants/cardano-identity",
  "private": false,
  "version": "1.0.0",
  "description": "A package that provides utility functions to inspect the identity of a signature",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "coverage": "jest --coverage",
    "lint": "eslint src/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MutantNFTs/cardano-identity.git"
  },
  "keywords": [
    "cardano",
    "tx",
    "inspector",
    "mutants"
  ],
  "author": "glneto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MutantNFTs/cardano-identity/issues"
  },
  "homepage": "https://github.com/MutantNFTs/cardano-identity#readme",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.6.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@emurgo/cardano-message-signing-nodejs": "^1.0.1",
    "@emurgo/cardano-serialization-lib-nodejs": "^11.5.0",
    "@mutants/cardano-tx-inspector": "^1.7.0",
    "bech32": "^2.0.0"
  }
}
